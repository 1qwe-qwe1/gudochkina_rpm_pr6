<Window x:Class="gudochkina_pr3.Pages.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gudochkina_pr3.Pages"
        mc:Ignorable="d"
        Title="Восстановление пароля" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Resources/icon.png">
    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFEC7071" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="Восстановление пароля" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="1">
            <StackPanel x:Name="spEmailStep" VerticalAlignment="Center">
                <TextBlock Text="Введите email, указанный при регистрации:" 
                           FontSize="14" 
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <TextBox x:Name="txtEmail" 
                         Width="300" 
                         Height="30" 
                         Padding="5"
                         Margin="0,0,0,10"
                         HorizontalAlignment="Center"/>

                <Button x:Name="btnSendCode" 
                        Content="Отправить код" 
                        Style="{StaticResource RoundButtonStyle}"
                        Click="btnSendCode_Click"
                        HorizontalAlignment="Center"/>

                <TextBlock x:Name="txtEmailError" 
                           Foreground="Red" 
                           FontSize="12" 
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <StackPanel x:Name="spCodeStep" Visibility="Collapsed" VerticalAlignment="Center">
                <TextBlock Text="Введите код из письма:" 
                           FontSize="14" 
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <TextBox x:Name="txtCode" 
                         Width="150" 
                         Height="30" 
                         Padding="5"
                         Margin="0,0,0,10"
                         HorizontalAlignment="Center"
                         MaxLength="4"
                         TextAlignment="Center"
                         FontSize="16"/>

                <Button x:Name="btnVerifyCode" 
                        Content="Подтвердить" 
                        Style="{StaticResource RoundButtonStyle}"
                        Click="btnVerifyCode_Click"
                        HorizontalAlignment="Center"/>

                <Button x:Name="btnResendCode" 
                        Content="Отправить повторно" 
                        Style="{StaticResource RoundButtonStyle}"
                        Click="btnResendCode_Click"
                        HorizontalAlignment="Center"
                        Margin="0,5,0,0"/>

                <TextBlock x:Name="txtCodeError" 
                           Foreground="Red" 
                           FontSize="12" 
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <StackPanel x:Name="spPasswordStep" Visibility="Collapsed" VerticalAlignment="Center">
                <TextBlock Text="Введите новый пароль:" 
                           FontSize="14" 
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <PasswordBox x:Name="txtNewPassword" 
                             Width="250" 
                             Height="30" 
                             Padding="5"
                             Margin="0,0,0,10"
                             HorizontalAlignment="Center"
                             PasswordChanged="txtNewPassword_PasswordChanged"/>

                <TextBlock Text="Повторите новый пароль:" 
                           FontSize="14" 
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <PasswordBox x:Name="txtConfirmPassword" 
                             Width="250" 
                             Height="30" 
                             Padding="5"
                             Margin="0,0,0,10"
                             HorizontalAlignment="Center"
                             PasswordChanged="txtConfirmPassword_PasswordChanged"/>

                <Button x:Name="btnSavePassword" 
                        Content="Сохранить пароль" 
                        Style="{StaticResource RoundButtonStyle}"
                        Click="btnSavePassword_Click"
                        HorizontalAlignment="Center"/>

                <TextBlock x:Name="txtPasswordError" 
                           Foreground="Red" 
                           FontSize="12" 
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
