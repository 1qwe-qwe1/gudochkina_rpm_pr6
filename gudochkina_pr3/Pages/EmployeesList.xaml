<Page x:Class="gudochkina_pr3.Pages.EmployeesList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gudochkina_pr3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeesList" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Список сотрудников" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="10" HorizontalAlignment="Center"/>

        <!-- Панель поиска и фильтрации -->
        <Border Grid.Row="1" Background="#F5F5F5" Margin="10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Поиск по ФИО -->
                <TextBox x:Name="txtSearch" Grid.Column="0" 
                         TextChanged="txtSearch_TextChanged"
                         Margin="0,0,10,0"
                         VerticalAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="4"/>
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                          Margin="8,4"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Фильтр по роли -->
                <ComboBox x:Name="cmbRoleFilter" Grid.Column="1" 
                          SelectionChanged="cmbRoleFilter_SelectionChanged"
                          Width="150" Margin="0,0,10,0"
                          VerticalAlignment="Center">
                    <ComboBoxItem Content="Все роли" IsSelected="True"/>
                </ComboBox>

                <!-- Кнопка добавления -->
                <Button Grid.Column="2" Content="Добавить сотрудника" 
                        Click="btnAddEmployee_Click"
                        Padding="10,5" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Список сотрудников -->
        <ListView x:Name="lvEmployees" Grid.Row="2" Margin="10"
                  MouseDoubleClick="lvEmployees_MouseDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" 
            Padding="10" Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Заглушка для фото -->
                            <Image Grid.Column="0" Width="80" Height="80" 
                   Margin="0,0,10,0">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="/Resources/default-avatar.png"/>
                                    </Style>
                                </Image.Style>
                            </Image>

                            <!-- Информация о сотруднике -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding FullName}" 
                           FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding RoleName}" 
                           Foreground="Gray" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding PhoneNumber}" 
                           Foreground="DarkBlue"/>
                                <TextBlock Text="{Binding PostName}" 
                           Foreground="Green" Margin="0,2,0,0"/>

                                <!-- Статус с триггерами -->
                                <TextBlock Margin="0,2,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Неизвестно"/>
                                            <Setter Property="Foreground" Value="Gray"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                    <Setter Property="Text" Value="Активен"/>
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Text" Value="Неактивен"/>
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Статусная строка -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock x:Name="tbStatus" Text="Готово"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
    
</Page>
