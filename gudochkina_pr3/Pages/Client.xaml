<Page x:Class="gudochkina_pr3.Pages.Client"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gudochkina_pr3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Client">

    <Grid>
        <StackPanel>
            <!-- Приветствие (будет обновляться из кода) -->
            <Border x:Name="greetingBorder" 
                    Background="LightBlue" 
                    Padding="10" 
                    Margin="5">
                <TextBlock x:Name="greetingTextBlock" 
                           FontSize="16" 
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>
            </Border>
            <StackPanel x:Name="adminMenuPanel" Visibility="Collapsed" Margin="10">
                <TextBlock Text="Администрирование" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                <WrapPanel>
                    <Button x:Name="btnEmployees" Content="Сотрудники" 
                    Click="btnEmployees_Click" Margin="0,0,10,10" Padding="10,5"/>
                    <!-- Добавьте другие кнопки администратора по необходимости -->
                </WrapPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
