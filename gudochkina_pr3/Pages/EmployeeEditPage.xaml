<Page x:Class="gudochkina_pr3.Pages.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gudochkina_pr3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeEditPage" Background="White">

    <ScrollViewer>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" x:Name="tbTitle" 
                       Text="Добавление сотрудника"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Фото и основная информация -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Фото -->
                <Border Grid.Column="0" BorderBrush="LightGray" 
                        BorderThickness="1" Width="150" Height="150"
                        Margin="0,0,20,0">
                    <Image x:Name="imgPhoto" Stretch="Uniform">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="/Resources/default-avatar.png"/>
                            </Style>
                        </Image.Style>
                    </Image>
                </Border>

                <Button Grid.Column="0" Content="Добавить фото"
                        Margin="0,160,0,0" Width="150"
                        Click="btnAddPhoto_Click"/>

                <!-- Основные поля -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Фамилия -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Фамилия:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             x:Name="txtSurname" Margin="0,0,0,10"/>

                    <!-- Имя -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Имя:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             x:Name="txtName" Margin="0,0,0,10"/>

                    <!-- Отчество -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Отчество:" Margin="0,0,10,10">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Black"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=txtPatronymic}" Value="">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             x:Name="txtPatronymic" Margin="0,0,0,10"/>

                    <!-- Телефон -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Телефон:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                             x:Name="txtPhoneNumber" Margin="0,0,0,10"/>
                </Grid>
            </Grid>

            <!-- Дополнительная информация -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Статус -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Статус:" Margin="0,0,10,10"/>
                <ComboBox Grid.Row="0" Grid.Column="1" 
                          x:Name="cmbStatus" Margin="0,0,0,10"/>

                <!-- Должность -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Должность:" Margin="0,0,10,10"/>
                <ComboBox Grid.Row="1" Grid.Column="1" 
                          x:Name="cmbPost" Margin="0,0,0,10"/>

                <!-- Роль -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Роль:" Margin="0,0,10,10"/>
                <ComboBox Grid.Row="2" Grid.Column="1" 
                          x:Name="cmbRole" Margin="0,0,0,10"/>

                <!-- Логин -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Логин:" Margin="0,0,10,10"/>
                <TextBox Grid.Row="3" Grid.Column="1" 
                         x:Name="txtLogin" Margin="0,0,0,10"/>
            </Grid>

            <!-- Пароль и кнопки -->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Пароль:" Margin="0,0,10,20"/>
                <PasswordBox Grid.Row="0" Grid.Column="1" 
                             x:Name="txtPassword" Margin="0,0,0,20"/>

                <!-- Кнопки -->
                <StackPanel Grid.Row="1" Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="btnSave" Content="Сохранить" 
                            Click="btnSave_Click" 
                            Margin="0,0,10,0" Padding="20,10"/>
                    <Button Content="Очистить" 
                            Click="btnClear_Click"
                            Padding="20,10"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
