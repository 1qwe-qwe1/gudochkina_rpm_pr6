<Page x:Class="gudochkina_pr3.Pages.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gudochkina_pr3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeEditPage" Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" x:Name="tbTitle" 
                       Text="Добавление сотрудника"
                       FontSize="20" FontWeight="Bold" 
                       Margin="10" HorizontalAlignment="Center"/>

            <!-- Основной контент -->
            <Border Grid.Row="2" Background="#F5F5F5" Margin="10" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Фото слева -->
                    <StackPanel Grid.Column="0" Width="180" Margin="0,0,20,0">
                        <Border BorderBrush="LightGray" 
                                BorderThickness="1" 
                                Background="White"
                                Width="150" 
                                Height="150"
                                HorizontalAlignment="Center">
                            <Image x:Name="imgPhoto" 
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="/Resources/default-avatar.png"/>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Border>

                        <Button x:Name="btnAddPhoto" 
                                Content="Добавить фото" 
                                Click="btnAddPhoto_Click"
                                Margin="0,10,0,0"
                                Width="150"
                                Padding="8,5"
                                HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Поля справа -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Фамилия -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Фамилия:" 
                                   Margin="0,0,10,10"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 x:Name="txtSurname" 
                                 Margin="0,0,0,10"
                                 Height="28"
                                 Padding="5"
                                 FontSize="12"/>

                        <!-- Имя -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Имя:" 
                                   Margin="0,0,10,10"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 x:Name="txtName" 
                                 Margin="0,0,0,10"
                                 Height="28"
                                 Padding="5"
                                 FontSize="14"/>

                        <!-- Отчество -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Отчество:" 
                                   Margin="0,0,10,10"
                                   VerticalAlignment="Center"
                                   Foreground="#666666">
                            <TextBlock.ToolTip>
                                <TextBlock Text="Не обязательное поле" Foreground="Gray"/>
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 x:Name="txtPatronymic" 
                                 Margin="0,0,0,10"
                                 Height="28"
                                 Padding="5"
                                 FontSize="14"/>

                        <!-- Телефон -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Телефон:" 
                                   Margin="0,0,10,10"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 x:Name="txtPhoneNumber" 
                                 Margin="0,0,0,10"
                                 Height="28"
                                 Padding="5"
                                 FontSize="14"/>

                        <!-- Статус -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="Статус:" 
                                   Margin="0,0,10,10"
                                   VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="4" Grid.Column="1" 
                                  x:Name="cmbStatus" 
                                  Margin="0,0,0,10"
                                  Height="28"
                                  Padding="5"
                                  FontSize="14">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <!-- Должность -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                   Text="Должность:" 
                                   Margin="0,0,10,10"
                                   VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="5" Grid.Column="1" 
                                  x:Name="cmbPost" 
                                  Margin="0,0,0,10"
                                  Height="28"
                                  Padding="5"
                                  FontSize="14"
                                  DisplayMemberPath="PostName"
                                  SelectedValuePath="PostId">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <!-- Роль -->
                        <TextBlock Grid.Row="6" Grid.Column="0" 
                                   Text="Роль:" 
                                   Margin="0,0,10,10"
                                   VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="6" Grid.Column="1" 
                                  x:Name="cmbRole" 
                                  Margin="0,0,0,10"
                                  Height="28"
                                  Padding="5"
                                  FontSize="14"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="RoleID">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <!-- Логин -->
                        <TextBlock Grid.Row="7" Grid.Column="0" 
                                   Text="Логин:" 
                                   Margin="0,0,10,10"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="7" Grid.Column="1" 
                                 x:Name="txtLogin" 
                                 Margin="0,0,0,10"
                                 Height="28"
                                 Padding="5"
                                 FontSize="14"/>

                        <!-- Пароль -->
                        <TextBlock Grid.Row="8" Grid.Column="0" 
                                   Text="Пароль:" 
                                   Margin="0,0,10,10"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=tbTitle, Path=Text}" Value="Добавление сотрудника">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <PasswordBox Grid.Row="8" Grid.Column="1" 
             x:Name="txtPassword" 
             Margin="0,0,0,10"
             Height="28"
             Padding="5"
             FontSize="14"
             Visibility="Collapsed">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=tbTitle, Path=Text}" Value="Добавление сотрудника">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>
                    </Grid>
                </Grid>
            </Border>

            <!-- Кнопки -->
            <Border Grid.Row="3" Background="#F5F5F5" Margin="10" Padding="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnSave" 
                            Content="Сохранить" 
                            Click="btnSave_Click" 
                            Margin="0,0,10,0" 
                            Padding="15,8"
                            MinWidth="100"
                            MinHeight="50"
                            FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
