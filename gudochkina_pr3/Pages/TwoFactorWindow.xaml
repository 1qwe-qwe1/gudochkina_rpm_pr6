<Window x:Class="gudochkina_pr3.Pages.TwoFactorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gudochkina_pr3.Pages"
        mc:Ignorable="d"
        Title="Двухфакторная аутентификация" Height="350" Width="400"
        Icon="/Resources/icon.png">
    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFEC7071" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="Подтверждение входа" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="На вашу почту отправлен код подтверждения" 
                       FontSize="14" 
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>

            <TextBlock x:Name="txtEmailInfo" 
                       FontSize="12" 
                       Foreground="Gray"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Введите код:" 
                       FontSize="14" 
                       Margin="0,0,0,5"
                       HorizontalAlignment="Center"/>

            <TextBox x:Name="txtCode" 
                     Width="150" 
                     Height="35" 
                     Padding="5"
                     Margin="0,0,0,15"
                     HorizontalAlignment="Center"
                     MaxLength="4"
                     TextAlignment="Center"
                     FontSize="18"
                     FontWeight="Bold"/>

            <Button x:Name="btnVerify" 
                    Content="Подтвердить" 
                    Style="{StaticResource RoundButtonStyle}"
                    Click="btnVerify_Click"
                    HorizontalAlignment="Center"
                    Width="180"/>

            <Button x:Name="btnResend" 
                    Content="Отправить повторно" 
                    Style="{StaticResource RoundButtonStyle}"
                    Click="btnResend_Click"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,0"
                    Width="180"/>

            <TextBlock x:Name="txtError" 
                       Foreground="Red" 
                       FontSize="12" 
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
